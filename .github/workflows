name: Deploy Resume

on:
  push:
    branches:
      - main  # когда пушим в main

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3   # забираем файлы репозитория
      - uses: actions/configure-pages@v3
      - uses: actions/upload-pages-artifact@v1
        with:
          path: .   # все файлы сайта
      - uses: actions/deploy-pages@v1
